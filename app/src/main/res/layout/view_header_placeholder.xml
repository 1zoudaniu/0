<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:orientation="vertical"
    android:translationY="0dp"
    android:elevation="0dp"
    android:background="#3F51B5"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:translationY="0dp"
        android:elevation="0dp"
        android:background="#3F51B5"
        >

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/tttt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height">


            <TextView
                android:id="@+id/header_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3F51B5" />

            <safebox.yiye.com.safebox.view.DotCircularRingView
                android:id="@+id/circleView"
                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                custom:diameter="200dp"
                custom:highlightColor="#FFFFFF"
                custom:progress="20" />

            <TextView
                android:id="@+id/header_refresh_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:text="车队评分"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header_refresh_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="50"
                android:textColor="#fff"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/header_refresh_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="183dp"
                android:text="中  等"
                android:textColor="#fff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/header_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/circleView"
                android:layout_centerHorizontal="true"
                android:text="  立即刷新  "
                android:textColor="#fff"
                android:background="#69B93C"
                android:textSize="20sp" />

        </RelativeLayout>
    </FrameLayout>
</LinearLayout>